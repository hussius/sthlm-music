{
  "sandboxing": {
    "enabled": true,
    "allowedPaths": [
      "${PROJECT_DIR}"
    ],
    "allowedNetworkHosts": [
      "api.anthropic.com",
      "*.anthropic.com"
    ],
    "blockMessage": "\ud83d\udeab Blocked: This operation would access files outside the project directory. For workshop safety, Claude Code is restricted to: ${PROJECT_DIR}\nIf you need to access other files, please:\n  1. Copy them into your project directory, or\n  2. Disable sandboxing in ~/.claude/settings.json (not recommended during workshop)\nThis protection helps prevent accidental changes to your system files."
  },
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Bash(git commit *)",
      "Bash(git push *)",
      "Bash(git add *)",
      "Bash(git status *)",
      "Bash(git diff *)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/session-start.sh"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/session-end.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/post-tool-use.sh"
          }
        ]
      }
    ]
  }
}
