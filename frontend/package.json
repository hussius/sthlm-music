{
  "name": "react-frontend-template",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "build": "vite build && cp package.json ./build/package.json",
    "dev": "vite",
    "check": "prettier --check src/**/*.{ts,tsx,css} && tsc --noEmit && eslint . && npm run test",
    "test": "node --import tsx --test tests/*.test.mts",
    "format": "prettier --write src/**/*.{ts,tsx,css} && prettier --write tests/*.test.mts"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@codongit/codon-component-library": "8.2.5",
    "@eslint/js": "^9.32.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "clsx": "^2.1.1",
    "eslint": "^9.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jiti": "^2.5.1",
    "postcss": "^8.5.3",
    "prettier": "^3.6.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.8.2",
    "tailwindcss": "^4.1.17",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.4",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.0",
    "vite": "^7.2.2",
    "vite-plugin-checker": "^0.9.2"
  }
}
